load_file("test1.ses")

objref rvp[2]
rvp[0] = new RangeVarPlot("nai")
rvp[1] = new RangeVarPlot("v")
proc replt() {local i
	Graph[0].erase_all()
	for i=0,1 {
		a rvp[i].begin(.5)
		c rvp[i].end(.5)
		rvp[i].origin(0)
		Graph[0].addobject(rvp[i], i+1, 1+(1-i), 0.8, 0.9-.1*i)
	}
	stdinit()
	Graph[0].exec_menu("View = plot")
}

proc recon() {
	forall disconnect()
	if (issection("a")) {
		connect b($2), a($1)
		connect c($3), b(1 - $2)
	}else if (issection("c")) {
		connect b(1-$2), c($3)
		connect a($1), b($2)
	}else{ 
		connect a($1), b($2)
		connect c($3), b(1-$2)
	}
	replt()
	topology()
}

b recon(0,0,1)


